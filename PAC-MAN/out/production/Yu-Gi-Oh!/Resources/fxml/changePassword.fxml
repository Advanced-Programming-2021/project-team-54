<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefWidth="900.0" prefHeight="600.0"
            style="-fx-background-color: black" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.view.ChangePassword">
    <top>
        <HBox alignment="TOP_LEFT">
            <Label fx:id="backText" layoutX="11.0" onMouseClicked="#back" prefHeight="40.0" prefWidth="40.0" text="←" textFill="yellow">
                <font>
                    <Font size="24"/>
                </font>
            </Label>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" >
            <Label alignment="TOP_CENTER" text="Change Password" textFill="yellow">
                <font>
                    <Font size="40"></Font>
                </font>
            </Label>
            <Label fx:id="messageBox" alignment="CENTER" prefHeight="200.0" prefWidth="2000.0" textFill="RED">
                <VBox.margin>
                    <Insets bottom="10"/>
                </VBox.margin>
            </Label>
            <Label text="old password :" textFill="ORANGE" >
                <VBox.margin>
                    <Insets bottom="10"/>
                </VBox.margin>
            </Label>
            <TextField fx:id="oldPasswordTextField" maxWidth="200.0" promptText="Enter your Old Password">
                <VBox.margin>
                    <Insets bottom="10"/>
                </VBox.margin>
            </TextField>
            <Label text="new password :" textFill="ORANGE">
                <VBox.margin>
                    <Insets bottom="10"/>
                </VBox.margin>
            </Label>
            <TextField fx:id="newPasswordTextField" maxWidth="200.0" promptText="Enter your New Password">
                <VBox.margin>
                    <Insets bottom="20"/>
                </VBox.margin>
            </TextField>
            <Button fx:id="nextButton" mnemonicParsing="false" onMouseClicked="#changePassword" prefHeight="26.0" prefWidth="193.0" text="Change Password" />
        </VBox>
    </center>
</BorderPane>
