<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            style="-fx-background-color: black"
            fx:controller="sample.view.Shop"
            prefHeight="400.0" prefWidth="600.0" >
<top>
    <HBox alignment="TOP_LEFT">
        <Label fx:id="backText" layoutX="11.0" onMouseClicked="#back" prefHeight="40.0" prefWidth="40.0" text="←" textFill="yellow">
            <font>
                <Font size="24"/>
            </font>
        </Label>

    </HBox>
</top>
    <center>
        <ScrollPane fitToWidth="true" fx:id="scrollPane" hbarPolicy="NEVER">
            <VBox>
            <HBox>
                <VBox alignment="CENTER">
                    <GridPane fx:id="AlexandriteDragon" minHeight="10" maxWidth="30" alignment="CENTER"/>
                    <Button fx:id="buyAlexandriteDragon" onMouseClicked="#BuyAlexandriteDragon" text="Buy"></Button>
                </VBox>
                <HBox.margin>
                    <Insets right="20"></Insets>
                </HBox.margin>
                <VBox alignment="CENTER">
                    <GridPane fx:id="AxeRaider" minHeight="10" maxWidth="30" alignment="CENTER"/>
                    <Button fx:id="buyAxeRaider" onMouseClicked="#Buy1" text="Buy"></Button>
                </VBox>
                <VBox alignment="CENTER">
                    <GridPane fx:id="BabyDragon" minHeight="10" maxWidth="30" alignment="CENTER"/>
                    <Button fx:id="buyBabyDragon" onMouseClicked="#Buy1" text="Buy"></Button>
                </VBox>
            </HBox>
                <HBox>
                    <VBox alignment="CENTER">
                        <GridPane fx:id="BattleOx" minHeight="10" maxWidth="30" alignment="CENTER"/>
                        <Button fx:id="buy4" onMouseClicked="#Buy1" text="Buy"></Button>
                    </VBox>
                    <HBox.margin>
                        <Insets right="20"></Insets>
                    </HBox.margin>
                    <VBox alignment="CENTER">
                        <GridPane fx:id="BattleWarrior" minHeight="10" maxWidth="30" alignment="CENTER"/>
                        <Button fx:id="buy5" onMouseClicked="#Buy1" text="Buy"></Button>
                    </VBox>
                    <VBox alignment="CENTER">
                        <GridPane fx:id="BeastKingBarbaros" minHeight="10" maxWidth="30" alignment="CENTER"/>
                        <Button fx:id="buy6" onMouseClicked="#Buy1" text="Buy"></Button>
                    </VBox>
                </HBox>
            </VBox>
        </ScrollPane>

    </center>
    <bottom>
        <HBox alignment="CENTER">
            <Label fx:id="previousText" layoutX="11.0" onMouseClicked="#back" prefHeight="40.0" prefWidth="40.0" text="←" textFill="red">
                <font>
                    <Font size="24"/>
                </font>
            </Label>
            <Label fx:id="nextText" layoutX="11.0" onMouseClicked="#back" prefHeight="40.0" prefWidth="40.0" text="→" textFill="red">
                <font>
                    <Font size="24"/>
                </font>
            </Label>
        </HBox>
    </bottom>
</BorderPane>
