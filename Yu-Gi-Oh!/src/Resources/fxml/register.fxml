<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefWidth="900.0" prefHeight="600.0"
            style="-fx-background-color: black" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.view.Register">
    <top>
        <HBox alignment="TOP_LEFT">
            <Label fx:id="backText" layoutX="11.0" onMouseClicked="#back" prefHeight="40.0" prefWidth="40.0" text="←" textFill="yellow">
                <font>
                    <Font size="24"/>
                </font>
            </Label>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" >
            <Label alignment="TOP_CENTER" text="Sign Up" textFill="yellow">
                <font>
                    <Font size="40"/>
                </font>
            </Label>
            <Label fx:id="messageBox" alignment="CENTER" prefHeight="200.0" prefWidth="2000.0" textFill="RED"/>
            <Label text="Username :" textFill="ORANGE">
            <VBox.margin>
                <Insets bottom="10"/>
            </VBox.margin>
            </Label>
            <TextField fx:id="usernameTextField" maxWidth="200.0" promptText="Enter your Username">
            <VBox.margin>
                <Insets bottom="10"/>
            </VBox.margin>
            </TextField>

            <Label text="Nickname :" textFill="ORANGE">
                <VBox.margin>
                    <Insets bottom="10"/>
                </VBox.margin>
            </Label>
            <TextField fx:id="nicknameTextField" maxWidth="200.0" promptText="Enter your Nickname">
                <VBox.margin>
                    <Insets bottom="10"/>
                </VBox.margin>
            </TextField>

            <Label text="Password :" textFill="ORANGE">
            <VBox.margin>
                <Insets bottom="10"/>
            </VBox.margin>
            </Label>
            <TextField fx:id="passwordTextField" maxWidth="200.0" promptText="Enter your Password">
            <VBox.margin>
                <Insets bottom="20"/>
            </VBox.margin>
            </TextField>
            <Button fx:id="nextButton" onMouseClicked="#register"
                    prefHeight="26.0" prefWidth="93.0" text="Register" />
        </VBox>
    </center>
</BorderPane>