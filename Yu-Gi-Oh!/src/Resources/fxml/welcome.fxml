<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.media.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefWidth="900.0" prefHeight="600.0"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.view.Main"
            style="-fx-background-image: url(assets/Sleeve/50151.png)">
    <top>
        <HBox alignment="CENTER">
            <Label fx:id="welcome" text="Welcome to YU-GI-OH in Java!" textFill="dodgerblue">
                <font>
                    <Font name="System Bold" size="34"/>
                </font>
            </Label>
        </HBox>
    </top>
    <center>
        <GridPane fx:id="gameTitle" alignment="CENTER"/>
    </center>
    <bottom>
        <HBox alignment="TOP_CENTER" prefHeight="149.0" prefWidth="600.0">
            <Button fx:id="signupButton" onMouseClicked="#signup" prefHeight="25" prefWidth="100"
                    text="Sign Up" style="-fx-background-color: red">
                <HBox.margin>
                    <Insets right="10"/>
                </HBox.margin>
            </Button>
            <Button fx:id="loginButton" onMouseClicked="#login" prefHeight="25" prefWidth="100"
                    text="Login" style="-fx-background-color: red">
                <HBox.margin>
                    <Insets right="10"/>
                </HBox.margin>
            </Button>
            <Button fx:id="exitButton" onMouseClicked="#exitGame" prefHeight="25" prefWidth="100"
                    text="Exit" style="-fx-background-color: red"/>
        </HBox>
    </bottom>
</BorderPane>

